<com.android.leanlauncher.DeleteDropTargetBar xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom"
    android:focusable="false"
    >

    <!-- Drag specific targets container -->

    <LinearLayout
        android:id="@+id/drag_target_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:baselineAligned="true">

        <!-- Delete target -->
        <com.android.leanlauncher.DeleteDropTarget
            android:layout_weight="1"
            android:id="@+id/delete_target_text"
            style="@style/DropTargetButton"
            android:drawableStart="@drawable/remove_target_selector"
            android:drawableLeft="@drawable/remove_target_selector"
            android:text="@string/delete_zone_label_workspace" />

        <!-- Info target -->
        <com.android.leanlauncher.InfoDropTarget
            android:layout_weight="1"
            android:id="@+id/info_target_text"
            style="@style/DropTargetButton"
            android:drawableStart="@drawable/info_target_selector"
            android:drawableLeft="@drawable/info_target_selector"
            android:text="@string/info_target_label" />
    </LinearLayout>

</com.android.leanlauncher.DeleteDropTargetBar>